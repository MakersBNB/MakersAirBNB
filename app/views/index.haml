- if !current_user
  .container-fluid
    %section.container
      .container-page
        .col-md-6
          %h1 Feel at home, Anywhere
          %p Search over thousands of homes all over the UK.
          %br
          %h3.dark-grey Sign up to MakersBnB
          %form{ :action => "/session/create", :method => "post" }
            .form-group.col-lg-12
              %label Name
              %input.form-control{:name => "name", :type => "text", :required => true}/
            .form-group.col-lg-6
              %label Password
              %input.form-control{:name => "password", :type => "password", :required => true}/
            .form-group.col-lg-6
              %label Repeat Password
              %input.form-control{:name => "password_confirmation", :type => "password", :required => true}/
            .form-group.col-lg-6
              %label Email Address
              %input.form-control{:name => "email", :type => "email", :required => true}/
            .col-md-6
              %br
              %button.btn.btn-primary{:type => "submit"} Sign up
